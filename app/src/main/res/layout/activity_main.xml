<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pantalla"
    tools:context="com.example.pc.botones.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Manda un saludo"
        android:inputType="textPersonName"
        android:textColor="@color/txt"
        android:textColorHint="@color/color_txt_boton2"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        android:background="@color/color_boton"
        android:text="Saludar"
        android:textColor="@color/color_txt_boton1"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/color_txt_boton1"
        android:text="SALIR"
        android:textColor="@color/color_txt_boton2"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/boton"
        android:layout_height="@dimen/abajo_boton"
        android:layout_marginTop="@dimen/marge_boton"
        android:background="@color/color_txt_boton2"
        android:text="menu"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_txt_boton"/>

</RelativeLayout>
